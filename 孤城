    <script>
        // æ·»åŠ äº’å‹•æ•ˆæœ
        document.addEventListener('DOMContentLoaded', function() {
            // æ˜Ÿæ˜Ÿæ‡¸åœæ•ˆæœ
            const stars = document.querySelectorAll('.star-rating:not(.empty)');
            stars.forEach((star, index) => {
                star.addEventListener('mouseenter', () => {
                    stars.forEach((s, i) => {
                        if (i <= index) {
                            s.style.color = '#DAA520';
                            s.style.textShadow = '0 0 15px rgba(218, 165, 32, 0.8)';
                        } else {
                            s.style.color = '#ffd700';
                            s.style.textShadow = '0 0 10px rgba(255, 215, 0, 0.5)';
                        }
                    });
                });

                star.addEventListener('mouseleave', () => {
                    stars.forEach(s => {
                        s.style.color = '#ffd700';
                        s.style.textShadow = '0 0 10px rgba(255, 215, 0, 0.5)';
                    });
                });
            });

            // æ¨™ç±¤é»æ“Šæ•ˆæœ
            const tags = document.querySelectorAll('.tag');
            tags.forEach(tag => {
                tag.addEventListener('click', () => {
                    tag.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        tag.style.transform = 'scale(1.05)';
                    }, 100);
                });
            });

            // è§’è‰²å¡ç‰‡æ‡¸åœæ•ˆæœ
            const characterCards = document.querySelectorAll('.character-card');
            characterCards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.style.boxShadow = '0 10px 25px rgba(218, 165, 32, 0.4)';
                });

                card.addEventListener('mouseleave', () => {
                    card.style.background = 'rgba(0,0,0,0.3)';
                });
            });
        });

        // æ·»åŠ æ»¾å‹•è¦–å·®æ•ˆæœ
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const sandstorm = document.querySelector('.sandstorm-effects');
            const floating = document.querySelector('.floating-elements');
            
            if (sandstorm) sandstorm.style.transform = `translateY(${scrolled * 0.05}px)`;
            if (floating) floating.style.transform = `translateY(${scrolled * 0.1}px)`;
        });
